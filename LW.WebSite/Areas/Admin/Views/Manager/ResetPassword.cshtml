@{
    Layout = null;
}

@using (Html.BeginForm("resetpassword", "manager", FormMethod.Post, new { @class="form-manager-resetpassword"}))
{
    @Html.AntiForgeryToken()
    <table cellpadding="0" cellspacing="0" border="0">
        <tr>
            <td class="editor-label"><label>原 密 码：</label></td>
            <td class="editor-field"><input name="OldPassword" type="password" maxlength="16" /></td>
        </tr>
        <tr>
            <td class="editor-label"><label>新 密 码：</label></td>
            <td class="editor-field"><input name="NewPassword" type="password" maxlength="16" /></td>
        </tr>
        <tr>
            <td class="editor-label"><label>确认密码：</label></td>
            <td class="editor-field"><input name="ConfirmPassword" type="password" maxlength="16" /></td>
        </tr>
    </table>
    @Styles.Render("~/Content/admin/manager-resetpassword")
    @Scripts.Render("~/bundles/admin/manager-resetpassword")
}