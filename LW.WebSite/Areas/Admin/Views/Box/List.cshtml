@{
    Layout = null;
}

<div class="easyui-layout" data-options="fit: true">
    <div class="grid-search search-box-list" data-options="region:'north',title:'查询条件',split:true">
        <ul class="clearfix">
            <li class="clearfix">
                <span class="editor-label">添加时间：</span>
                <span class="editor-field"><input class="date-addBeginTime" /></span>
                <span class="editor-label-child">至</span>
                <span class="editor-field"><input class="date-addEndTime" /></span>
            </li>
            <li class="clearfix">
                <span class="editor-label">盒子名称：</span>
                <span class="editor-field"><input class="text-name" /></span>
            </li>
            <li>
                <span class="editor-label"><a href="javascript:void(0);" class="button-search">查询</a></span>
            </li>
            <li class="clearfix">
                <span class="editor-label"><a href="javascript:void(0);" class="button-clear">清空</a></span>
            </li>
        </ul>
    </div>
    <div class="grid-box-list" data-options="region:'center', border:false">
        <table class="grid-table"></table>
    </div>
    @Scripts.Render("~/bundles/admin/box-list")
</div>